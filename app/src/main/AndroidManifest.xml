<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.saikailash.ooty.organization">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/sai_kailash"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name="com.saikailash.ooty.organization.MainActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar"
      android:configChanges="orientation|screenSize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <provider
      android:name="com.saikailash.ooty.organization.data.DataContentProvider"
      android:authorities="com.saikailash.ooty.organization"
      android:exported="false"/>
    <provider
      android:name=".data.EventContentProvider"
      android:authorities="com.saikailash.ooty.organization"
      android:exported="false"/>

    <activity
      android:name="com.saikailash.ooty.organization.ArticleDetailActivity"
      android:label="@string/app_name"
      android:parentActivityName="com.saikailash.ooty.organization.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.saikailash.ooty.organization.MainActivity"/>
    </activity>

    <service
      android:name="com.saikailash.ooty.organization.sync.ReminderFirebaseJobService"
      android:exported="false"/>

    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version"/>
    <meta-data
      android:name="com.google.android.maps.v2.API_KEY"
      android:value="@string/google_maps_api_key"/>

    <meta-data
      android:name="com.google.firebase.messaging.default_notification_icon"
      android:resource="@drawable/sai_logo" />

    <receiver android:name="com.saikailash.ooty.organization.ThoughtForTheDayWidget">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
      </intent-filter>

      <meta-data
        android:name="android.appwidget.provider"
        android:resource="@xml/thought_for_the_day_widget_info"/>
    </receiver>
  </application>

</manifest>